<UserControl x:Class="InfoSystem.MenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="175">

    <Border BorderBrush="{StaticResource secondaryColourBrush}" BorderThickness="0,0,3,0" CornerRadius="0, 30, 0, 0"
            Background="{StaticResource secondaryCompColourBrush}"
            Padding="0,30,0,0">

        <StackPanel Background="Transparent"
                    Width="175">
            <RadioButton Content="Пациенты"
                         Style="{StaticResource MenuButtonStyle}"
                         IsChecked="True"
                         Command="{Binding PatientsViewCommand}"/>

            <RadioButton Content="Лекарства"
                         Style="{StaticResource MenuButtonStyle}"
                         Command="{Binding MedicineViewCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
