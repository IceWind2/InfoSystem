<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    
    <Style BasedOn="{StaticResource {x:Type ToggleButton}}"
           TargetType="{x:Type RadioButton}"
           x:Key="MenuButtonStyle">
        <Style.Resources>
            <LinearGradientBrush x:Key="CheckedGradient" StartPoint="0 0" EndPoint="1 0">
                <GradientStop Color="{DynamicResource secondaryColour}" Offset="0"/>
                <GradientStop Color="{DynamicResource secondaryColour}" Offset="0.5"/>
                <GradientStop Color="{DynamicResource secondaryCompColour}" Offset="0.95"/>
                <GradientStop Color="{DynamicResource secondaryCompColour}" Offset="1"/>
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="MouseoverGradient" StartPoint="0 0" EndPoint="1 0">
                <GradientStop Color="{DynamicResource secondaryHighlightColour}" Offset="0"/>
                <GradientStop Color="{DynamicResource secondaryHighlightColour}" Offset="0.5"/>
                <GradientStop Color="{DynamicResource secondaryCompColour}" Offset="0.95"/>
                <GradientStop Color="{DynamicResource secondaryCompColour}" Offset="1"/>
            </LinearGradientBrush>
        </Style.Resources>

        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                Background="{TemplateBinding Background}" CornerRadius="10,10,10,10" BorderThickness="0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#103010"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="Height" Value="50"/>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource secondaryHighlightColourBrush}"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{DynamicResource secondaryColourBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MenuButtonTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Fonts/#Roboto"/>
        <Setter Property="Foreground" Value="{StaticResource contrastColourBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="MenuButtonIconStyle" TargetType="Icon:PackIconFontAwesome">
        <Setter Property="Foreground" Value="{StaticResource contrastColourBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="15,0,10,0"/>
    </Style>
</ResourceDictionary>